<div id="post_content">
  <h1 class="title">
    <%= @post.title %>
  </h1>
  <p class="date">
    Submitted <%= time_ago_in_words(@post.created_at) %> ago
  </p>
  <p class="body">
    <%= @post.body %>
  </p>
  <br>
  <%= link_to "Edit post", edit_post_path, class: "button_show_view" %>
  <%= link_to "Delete post", post_path(@post), class: "button_show_view", method: :delete, data: { confirm: "Are you sure ?" } %>
</div>
